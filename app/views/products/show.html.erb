<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <title>ShoppingAppRedo</title>
    <%= csrf_meta_tags %>
    <%= include_gon %>
    <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
   
    <%= stylesheet_link_tag "product_template" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>

<div class="container1">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @product.name.capitalize %></h1>
    <div class="card-text">
      <p><%= @product.description %></p>
      <p><small>SGD</small> <%= @product.price %></p>
      <%= button_to 'Add to Cart', add_to_cart_path(@product), :method=>:put,:remote=> true,data: { confirm: "Are you sure?" } %>
    </div>
    </div>
  </div>
  <div class="card-footer">
      <%= link_to 'Back to Product List', products_path %>
  </div>
</div>
</body>
</head>
