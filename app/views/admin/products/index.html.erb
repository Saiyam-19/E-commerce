<!DOCTYPE html>
<html>
  <head>
    <title>Admin | Products</title>
    <%= stylesheet_link_tag "admin_products" %>
  </head>
  <body>
    <div class="jumbotron">
      <h1>Admin | Products</h1>
    </div>
    <div class="container">
      <div class="row">
       
        <div class="col-12 card">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "admin_products", collection: @products %>
            </tbody>
          </table>
           <div class="btn1"> <%= button_to 'Add Product', new_admin_product_path, method: :get, class: "button" %></div>
        </div>
      </div>
    </div>
  </body>
</html>


