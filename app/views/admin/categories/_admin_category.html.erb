<!DOCTYPE html>
<html>
  <head>
    <title>New Category</title>
  </head>
  <body>
    <div class="jumbotron">
      <h1>New Category</h1>
    </div>
    <div class="container">
     <% if @category.present?%>
      <%= simple_form_for [:admin, @category], class: "form-horizontal" do |f| %>
        <%= f.input :name %>
        <%= f.button :submit %>
      <% end %>
       <%= link_to 'Back to Category List', admin_categories_path %>
      <%end%>
</div>
  </body>
</html>